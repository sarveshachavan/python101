import random
c = 5
flag = True
x = random.randint(1, 20)
print(x)
for b in range(1, c+1):
    print('chance no. ', b)
    a = input('Enter a number between 1 to 20 ')
    a = int(a)
    if a<x:
        print('number less than expected :( \n try again!')
    elif a>x:
        print('number too high :( ')
    elif a == x:
        print('Correct answer!! You just won a trip to Greece!! :)')
        flag = False
        break;
if flag:
    print('you just lost this game :/')
